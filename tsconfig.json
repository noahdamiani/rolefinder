{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "types": [
            "node",
            "puppeteer",
        ],
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "./app/*"
            ],
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "reports"
    ]
}
